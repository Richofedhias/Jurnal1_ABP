<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tV_tittle_1301208552"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Tittle"
                android:textSize="24dp"
                tools:layout_editor_absoluteX="42dp"
                tools:layout_editor_absoluteY="61dp" />

            <TextView
                android:id="@+id/tV_desc_1301208552"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="18dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tV_content1_1301208552"
            android:layout_marginLeft="10dp"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Content 1"
            android:layout_gravity="center"/>

        <View
            android:layout_marginLeft="10dp"
            android:layout_width="2dp"
            android:visibility="visible"
            android:layout_height="100dp"
            android:background="#000000"/>

        <TextView
            android:id="@+id/tV_content2_1301208552"
            android:layout_marginLeft="10dp"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Content 2"
            android:layout_gravity="center"/>

<ImageView
    android:id="@+id/gambar_1301208552"
    android:layout_marginLeft="5dp"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:src="@drawable/ic_launcher_background"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>